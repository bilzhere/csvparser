  <script>
	$(document).on('click', '#upload_to_database', function() {
    var form = $('#uploadForm');
    var formdata = false;
    if (window.FormData){
        formdata = new FormData(form[0]);
	  }
    $.ajax({
        type: "POST",
        url: "/csbuploads/",
        data: formdata ? formdata : form.serialize(),
        cache       : false,
        contentType : false,
        processData : false,
        beforeSend : function(){
                $('.card-header').html('File is being uploaded..');
        },
        success: function(result) {
                $('.card-header').html('Database Import Successfull');
            },
        error: function(result){
                $('.card-header').html('Something went wrong..!');
        },
        complete: function(){
                $('.card-header').html('Database Import Successfull');
        }
    });
});
  </script>
</html>
